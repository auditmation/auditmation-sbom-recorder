{
  "compilerOptions": {
    "module": "ES2022",
    "noImplicitAny": false,
    "composite": true,
    "target": "ES2023",
    "strict": true,
    "moduleResolution": "bundler",
    "removeComments": true,
    "sourceMap": true,
    "noLib": false,
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["ES2023", "DOM"],
    "outDir": "dist",
    "types": ["chai", "node", "mocha"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "package"
  ]
}
