{
  "name": "@auditmation/auditmation-sbom-recorder",
  "version": "0.0.1",
  "type": "module",
  "description": "GitHub action for uploading sbom files to Auditmation",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --minify --sourcemap --platform=node --target=es2020 --format=esm --outfile=dist/index.js --external:nock --external:@zerobias-com/platform-sdk --external:@zerobias-org/* --external:@auditmation/module-auditmation-auditmation-file-service --packages=external",
    "build:watch": "esbuild src/index.ts --bundle --sourcemap --platform=node --target=es2020 --outfile=dist/index.js --watch",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "test": "npm run test:tsc && npm run test:unit",
    "test:unit": "mocha --exit --inline-diffs --reporter=list",
    "test:tsc": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/auditmation/auditmation-sbom-recorder.git"
  },
  "author": "acastro@zerobias.com",
  "license": "ISC",
  "engines": {
    "node": ">=24.11.0",
    "npm": ">=10.0.0"
  },
  "bugs": {
    "url": "https://github.com/auditmation/auditmation-sbom-recorder/issues"
  },
  "homepage": "https://github.com/auditmation/auditmation-sbom-recorder#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@auditmation/module-auditmation-auditmation-file-service": "^0.11.2",
    "@auditmation/types-core-js": "^4.10.3",
    "@auditmation/util-logger": "4.0.10",
    "@zerobias-com/platform-sdk": "1.0.4",
    "axios": "^0.27.2",
    "md5-file": "^5.0.0",
    "nock": "^14.0.10"
  },
  "devDependencies": {
    "@auditmation/eslint-config": "2.0.2",
    "@tsconfig/node24": "^24.0.3",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.3",
    "chai": "^5.1.2",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "husky": "^9.0.0",
    "mocha": "^11.0.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
